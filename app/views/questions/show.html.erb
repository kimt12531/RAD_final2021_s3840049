<div class="center jumbotron">
  <p><%= @question.title %></p>
  <% @question.answers.each do |ans|%>
      <% unless ans[1].nil? %>
          <input type="radio" name="question-1-answers"><%= ans[1] %></input>
      <% end %>
  <% end %>
</div>

<td><%= link_to 'Submit', @questions.sample %></td>

<p>
  <strong>Title:</strong>
  <%= @question.title %>
</p>

<p>
  <strong>Answers:</strong>
  <%= @question.answers %>
</p>

<p>
  <strong>Multiple correct:</strong>
  <%= @question.multiple_correct %>
</p>

<p>
  <strong>Correct answers:</strong>
  <%= @question.correct_answers %>
</p>

<p>
  <strong>Tags:</strong>
  <%= @question.tags %>
</p>

<p>
  <strong>Category:</strong>
  <%= @question.category %>
</p>

<p>
  <strong>Difficulty:</strong>
  <%= @question.difficulty %>
</p>

